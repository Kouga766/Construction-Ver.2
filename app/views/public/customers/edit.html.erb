<div class='row' align=center>
  <% if @customer.errors.any? %>
  <%= @customer.errors.count %>error prohibited this obj from being saved:
  <% @customer.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
  <% end %>

  <h4 style="background-color: #d3d3d3; display:inline;" class="mt-4 mb-4">　会員情報編集　</h4>

  <%= form_with model: @customer, url: public_customer_path(@customer.id), local:true do |f| %>


  <table class="mt-4">

    <tr>
      <th>氏名</th>
      <th><%= f.text_field :name, placeholder: "ユーザー名" %></th>
    </tr>

    <tr>
      <th>メールアドレス</th>
      <th><%= f.email_field :email, placeholder: "メールアドレス" %></th>
    </tr>

    <tr>
      <th>アイコン画像</th>
      <th><%= f.attachment_field :image, class: "form-control-file answer_image" %></th>
    </tr>

  </table>



  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <br></br>
    <!--改行用-->
    <%= f.submit '編集内容を保存する', class: "btn btn-success" %>
    <%= link_to '退会する',public_customer_withdraw_path, class: "btn btn-danger" %>
  </div>

  <% end %>
</div>
